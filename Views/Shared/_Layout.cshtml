
<!DOCTYPE html>
<html>
<head>
    
    <title>@ViewBag.Title</title>
@*    <link rel="stylesheet" href="~/Styles/bootstrap.css" />
*@    <link rel="stylesheet" href="~/Styles/Custom.css" />
       
    @RenderSection("Styles", required: false)
</head>
 
    
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <a class="navbar-brand" href="#">PetShop</a>
        <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link btn dropdown-toggle" href="#" id="adminDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Admin
                    </a>
                    <div class="dropdown-menu" aria-labelledby="adminDropdown">
                        <div class="dropdown">
                           
                                <a class="dropdown-item" href="/NewAnimal/Index">New Animal</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Administrator", new { categoryId = 1 })">Reptiles</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Administrator", new { categoryId = 2 })">Mammals</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Administrator", new { categoryId = 3 })">Aquatic</a>
                        </div>
                        
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn" href="/Home/Index">Main Page</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link btn dropdown-toggle" href="#" id="catalogueDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Animals Catalogue
                    </a>
                    <div class="dropdown-menu" aria-labelledby="catalogueDropdown">
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/catalogue/Index?categoryID=1">Reptiles</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/catalogue/Index?categoryID=2">Mammals</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/catalogue/Index?categoryID=3">Aquatic</a>
                        <div class="dropdown-divider"></div>
                    </div>
                </li>
            </ul>
        </div>

    </nav>



    <div class="container-fade-in">
            @RenderBody()
    </div>
    
    @RenderSection("Scripts", required: false)
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
      <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>  
    
</body>
</html>
